@if (ViewBag.User != null)
{
    <div class="profile-container">
        <div class="profile-heading">
            <h2>User Information</h2>
        </div>


        <ul class="profile-details">
            <li>
                <label>
                    <h5>User Name:</h5>
                </label>
                <span>
                    <h6>@ViewBag.User.UserName</h6>
                </span>
            </li>
            <li>
                <label>
                    <h5>Name:</h5>
                </label>
                <span>
                    <h6>@ViewBag.User.Nombre</h6>
                </span>
            </li>
            <li>
                <label>
                    <h5>Email:</h5>
                </label>
                <span>
                    <h6>@ViewBag.User.Email</h6>
                </span>
            </li>
            <li>
                <label>
                    <h5>Phone Number:</h5>
                </label>
                <span>
                    <h6>@ViewBag.User.Telefono</h6>
                </span>
            </li>
        </ul>

        <a href='@Url.Action("LogOut","Home")' class="logout-link"> Log Out</a>
    </div>
}
else
{
    <div class="profile-container" style="height:300px">
        <div class="profile-heading">
            <h2 style="margin-top: 100px;">Log In to Continue Purchasing!</h2>
        </div>
        <a href='@Url.Action("LogIn","Home")' class="logout-link" style="margin-top:10%"> Log In!</a>
    </div>
    <style>
        .footer {
            margin-top: 400px;
        }
    </style>
}

<style>
    body {
        background-color: #302E2E;
        font-family: var(--bs-body-font-family);
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }


    .profile-container {
        max-width: 600px;
        height: 500px;
        margin: 50px auto;
        background-color: #fff;
        padding: 20px;
        border: #ddd;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }


    .profile-heading {
        text-align: center;
        margin-bottom: 20px;
    }


    .profile-heading h2 {
        color: rgb(206, 0, 0);
    }


    .profile-details {
        list-style: none;
        padding: 0;
        margin: 0;
        margin-top: 10%;
    }


    .profile-details li {
        margin-bottom: 15px;
    }


    .profile-details label {
        font-weight: bold;
        color: #555;
    }


    .profile-details span {
        display: inline-block;
        margin-left: 10px;
        color: #333;
    }


    .logout-link {
        display: inline-block;
        text-align: center;
        margin-top: 5%;
        text-decoration: none;
        color: #fff;
        background-color: rgb(206, 0, 0);
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s;
    }


    .logout-link:hover {
        text-decoration: none;
        color: black;
    }


    .login-message {
        text-align: center;
        margin-top: 20px;
        color: #ff0000;
    }

    .footer {
        margin-top: 100px;
        width: 100%;
    }

    li {
        display: flex;
        flex-direction: column;
    }
</style>





