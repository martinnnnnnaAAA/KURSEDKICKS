            <label for="@item.IdGenero">@item.Nombre</label>
        }
        </div>
        <div>
         <label>Brand:</label>
        @foreach (MARCA item in ViewBag.Marcas)
        {
           
            <input type="radio" name="Marca" value="@item.IdMarca">
            <label for="@item.IdMarca">@item.Nombre</label>
        }
        </div>
            <label for="Stock">Stock:</label>
            <input type="number" name="Stock">
        </div>




            <div class="formulario-botones">
                <button type="submit" class="btn btn-primary" style="margin-bottom: 10%;">Upload</button>
           
            </div>
        </form>
    </div>
</div>


