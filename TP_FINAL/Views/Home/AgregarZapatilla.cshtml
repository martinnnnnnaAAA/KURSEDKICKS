<form action='@Url.Action("FALTA")' method="post"> <!-- falta indicar accion -->
<div class="zapatilla-container">
    <div class="zapatilla-img" style="display:flex;flex-direction:column;">
        <img style ="max-width: 600px;" src="/Images/NoImage.jpg" alt="Zapatilla">
        <input type="text" name="zapatilla-foto"  style="min-width: 600px;">
    </div>

    <div class="zapatilla-info">
        <input type="text" id="zapatilla-nombre" placeholder="Nombre">
        <input type="text" id="zapatilla-precio" placeholder="Precio USD">
        <textarea id="zapatilla-descripcion" style="max-width: 700px;" placeholder="Descripción"></textarea>

<div class="formulario-colores">
    <label for="colores">Colores:</label>
    <select name="Colores" id="colores" multiple required>
        @foreach (var color in ViewBag.Colores)
        {
            <option value="@color.IdColor">@color.Nombre</option>
        }
    </select>
</div>

<div class="formulario-talles">
    <label for="talles">Talles:</label>
    <select name="Talles" id="talles" multiple required>
        @foreach (var talle in ViewBag.Talles)
        {
            <option value="@talle.IdTalle">@talle.Numero</option>
        }
    </select>
</div>

            <input type="hidden" name="Modelo" value="">
            <input type="hidden" name="Precio" value="">

            <div style="margin-bottom:10%;">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Modal" onclick="MostrarTalles()">Size Chart</button>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalPromociones" onclick="MostrarPromociones(@ViewBag.Mes)">Promotions!</button>
            </div>

            <div class="formulario-botones">
                <button type="submit" class="btn btn-primary" style="margin-bottom: 10%;">Add to cart</button>
           
            </div>
        </form>

        <div class="modal fade" id="Modal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
            <!-- Modal contenido -->
        </div>

        <div class="modal fade" id="ModalPromociones" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
            <!-- Modal contenido -->
        </div>
    </div>
</div>

