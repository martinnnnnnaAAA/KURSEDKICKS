<h1>Shopping cart</h1>

<section>
    <div class="container-fluid">
        <div class="row">
        @if(ViewBag.ZapatillaCarrito != null)
       {
            @foreach (MODELO item in ViewBag.ZapatillaCarrito)
            {
                <div class="col-md-3 col-12">
                    <a href='@Url.Action("Details", "Home", new {zapatilla = @item})'>
                            <div class="card">
                                <img src="@item.Foto" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Nombre</h5>
                                    <p class="card-text">@item.Descripcion</p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item" style="height:30px;">@item.MarcaNombre</li>
                                    <li class="list-group-item">@item.GeneroNombre</li>
                                    <li class="list-group-item">@item.Precio</li>
                                </ul>
                                <div class="card-body">
                                    <a href="#" class="card-link">Card link</a>
                                    <a href="#" class="card-link">Another link</a>
                                </div>
                            </div>
                    </a>
                </div>
            }
        }
        </div>
    </div>
</section>

<style> 
h1
{
    font-family: 'Poppins';
    font-size: 223px;
}
h2
{
  font-family: 'Poppins'; 
}
</style>