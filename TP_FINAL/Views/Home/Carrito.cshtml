<h1>Shopping cart</h1>

<section>
    <div class="container-fluid">
        <div class="row">
            @if (ViewBag.ListaDetalleCarrito != null)
            {
                <section>
                    @foreach (DETALLECARRITO item in ViewBag.ListaDetalleCarrito)
                    {
                        <div class="card mb-3" style="max-width: 540px;">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="/Images/@item.Foto" class="img-fluid rounded-start" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">@item.NombreMarca - @item.NombreModelo</h5>
                                        <p class="card-text">Talle: @item.Talle - Color: @item.Color</p>
                                        <p class="card-text"><small class="text-body-secondary">@item.Subtotal</small>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </section>
            }
            else
            {

            }
        </div>
    </div>
</section>