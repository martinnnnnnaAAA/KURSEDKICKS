<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    @foreach(MODELO item in ViewBag.Modelo){
      if(item.Destacado == true){
        <div class="carousel-item @if(item.Equals(ViewBag.Modelo[0])) { <text>active</text> }">
            <img src="/Images/@item.Foto" class="d-block w-100" alt="Imagen">
            <div class="carousel-caption d-none d-md-block">
                <h5>@item.Nombre</h5>
            </div>
        </div> 
      }
    }
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<section>
    <div class="container-fluid">
        <div class="row">
            @foreach (MODELO item in ViewBag.Modelo)
            {
                <div class="col-md-3 col-12">
                    <a href='@Url.Action("Details", "Home", new {zapatilla = @item})'>
                            <div class="card">
                                <img src="@item.Foto" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Nombre</h5>
                                    <p class="card-text">@item.Descripcion</p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item" style="height:30px;">@item.MarcaNombre</li>
                                    <li class="list-group-item">@item.GeneroNombre</li>
                                    <li class="list-group-item">@item.Precio</li>
                                </ul>
                                <div class="card-body">
                                    <a href="#" class="card-link">Card link</a>
                                    <a href="#" class="card-link">Another link</a>
                                </div>
                            </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<style>
.carousel {
    position: relative;
    width: 90%;
    margin: 0 auto;
}

.slides {
    display: flex;
}

.slide {
    flex: 0 0 100%;
    display: none;
}

.slide.current {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

img {
  position: static;
    width: 70%;
    height: auto;
}

.prev, .next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
}

.prev {
    left: 0;
}

.next {
    right: 0;
}
</style>

<script>
let currentSlide = 0;
showSlide(currentSlide);

function changeSlide(n) {
    showSlide(currentSlide += n);
}

function showSlide(n) {
    const slides = document.querySelectorAll('.slide');

    if (n < 0) {
        currentSlide = slides.length - 1;
    } else if (n >= slides.length) {
        currentSlide = 0;
    }

    slides.forEach(slide => {
        slide.classList.remove('current'); // Ocultar todas las diapositivas
    });

    slides[currentSlide].classList.add('current'); // Mostrar la diapositiva actual
}

// Agregar cambio autom√°tico de diapositiva cada 3 segundos
setInterval(function() {
    changeSlide(1); // Cambiar a la siguiente diapositiva
}, 3000); // 3000 milisegundos (3 segundos)
</script>