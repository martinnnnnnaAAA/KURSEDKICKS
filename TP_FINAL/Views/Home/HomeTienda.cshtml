@{
  ViewData["Title"] = "Index";
}
<img src="/Images/lilnas.jpg" class="d-block w-100" style="max-height: 720px;">


<section style="width:50%;margin-left:25%;margin-right:0; background-color:rgb(255, 255, 255);">
<h1 style="padding-top:5%; padding-left:">Featured Products</h1>
<div class="dropdown">
  <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
    Dropdown link
  </a>

  <ul class="dropdown-menu">
    <li><a class="dropdown-item" href="#">Action</a></li>
    <li><a class="dropdown-item" href="#">Another action</a></li>
    <li><a class="dropdown-item" href="#">Something else here</a></li>
  </ul>
</div>

  <div class="container-fluid">
    <div class="row">
      @foreach (MODELO item in ViewBag.Modelo)
      {
        <div class="col-md-3 col-12">
          <a href='@Url.Action("Modelo", "Home", item)'>
            <div class="card">
              <img src="/Images/@item.Foto" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">@item.MarcaNombre @item.Nombre</h5>
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item" style="height:30px;">USD $@item.Precio</li>
              </ul>
            </div>
          </a>
        </div>
      }

      <section class="container-pagination">
        <div class="pagination">
          @if (ViewBag.PaginaActual > 1)
          {
            <a href='@Url.Action("HomeTienda", "Home", new {pagMandada = ViewBag.PaginaActual-1})' class="btn">
              <svg xmlns="http://www.w3.org/2000/svg" class="btn-icon" fill="none" viewBox="0 0 24 24"
                stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
              </svg>
            </a>
          }

          @for (int i = 1; i <= ViewBag.totalPaginas; i++)
          {
            if (i == ViewBag.PaginaActual)
            {
              <a href='@Url.Action("HomeTienda", "Home", new { pagMandada = i })'
                class="page-link page-link--current">@i</a>

            }
            else
            {
              <a href='@Url.Action("HomeTienda", "Home", new { pagMandada = i })' class="page-link">@i</a>

            }
          }
          @if (ViewBag.PaginaActual < ViewBag.totalPaginas)
          {
            <a href='@Url.Action("HomeTienda", "Home", new {pagMandada =ViewBag.PaginaActual + 1})' class="btn">
              <svg xmlns="http://www.w3.org/2000/svg" class="btn-icon" fill="none" viewBox="0 0 24 24"
                stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          }

        </div>
      </section>


    </div>

  </div>
</section>

<style>
  body {
    background-image: url("/Images/lilnasbyn.jpg"); /* Reemplaza 'tu-imagen-de-fondo.jpg' con la ruta o URL de tu imagen */
    background-size: cover; /* Ajusta el tama√±o de la imagen para cubrir todo el fondo */
    background-position: center; /* Centra la imagen en el fondo */
    background-repeat: no-repeat; /* Evita que la imagen se repita */
  }

  .container-pagination {
    font-family: "Inter", sans-serif;
    color: #343a40;
    line-height: 1;
    display: flex;
    justify-content: center;
  }

  .pagination {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-top: 50px;
    margin-bottom: 50px;
  }

  .btn {
    border: 1px solid #ffffff;
    background-color: #666666;
    height: 48px;
    width: 48px;
    border-radius: 50%;
    background: none;
    cursor: pointer;
  }

  .btn-icon {
    width: 24px;
    height: 24px;
    stroke: #ffffff;
    margin-top: 25%;
  }

  .btn:hover {
    background-color: #ffffff;
    border: 1px solid #666666;
  }

  .btn:hover .btn-icon {
    stroke: #666666;

  }

  .page-link:link,
  .page-link:visited {
    text-decoration: none;
    background-color: #666666;
    color: #fff;
    font-size: 18px;
    height: 36px;
    width: 36px;
    border-radius: 50%;

    display: flex;
    align-items: center;
    justify-content: center;
  }

  .page-link:hover,
  .page-link:active,
  .page-link.page-link--current {
    background-color: #ffffff;
    color: #666666;
    border: 1px solid #666666;
  }

  form {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  label {
    display: block;
    margin-bottom: 8px;
    font-weight: bold;
  }

  select {
    width: 100%;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    margin-bottom: 16px;
  }

  input[type="submit"] {
    background-color: #4caf50;
    color: #fff;
    padding: 10px 20px;
    font-size: 16px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }
  .card{
    border: none;
    background-color: rgba(0, 0, 0, 0);
    min-height: 250px;
  }
  .card-body{
    display: flex;
    flex-direction: column;
    align-items: center;
    color:#000000;
  }
  a{
    text-decoration: none;
  }
  .list-group-item{
    border:none;
  }
</style>




