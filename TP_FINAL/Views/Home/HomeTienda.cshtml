@{
    ViewData["Title"] = "Index";
}

<div class="carousel">
    <button class="prev" onclick="changeSlide(-1)">&#10094;</button>
    <div class="slides">
    @foreach(var item in ViewBag.Modelo){
      if(item.Destacado == true){
        <div class="slide current">
            <img src="@item.Foto" alt="Imagen">
            <h1>@item.Nombre</h1>
        </div>
      }
    }
    </div>
    <button class="next" onclick="changeSlide(1)">&#10095;</button>
</div>
<section>
@foreach (MODELO item in ViewBag.Modelo)
{
  <a href='@Url.Action("Details", "Home", new { id = 123 })'>
<div class="card">
    <img src="@item.Foto" alt="@item.Nombre">
    <h2>@item.Nombre</h2>
    <h3>@item.Descripcion</h3>
    <p>@item.MarcaNombre</p>

    <a href="#">Learn more</a>
  </div>
  </a>
}
</section>

<style>
.carousel {
    position: relative;
    width: 90%;
    margin: 0 auto;
}

.slides {
    display: flex;
}

.slide {
    flex: 0 0 100%;
    display: none;
}

.slide.current {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

img {
  position: static;
    width: 70%;
    height: auto;
}

.prev, .next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
}

.prev {
    left: 0;
}

.next {
    right: 0;
}
</style>

<script>
let currentSlide = 0;
showSlide(currentSlide);

function changeSlide(n) {
    showSlide(currentSlide += n);
}

function showSlide(n) {
    const slides = document.querySelectorAll('.slide');

    if (n < 0) {
        currentSlide = slides.length - 1;
    } else if (n >= slides.length) {
        currentSlide = 0;
    }

    slides.forEach(slide => {
        slide.classList.remove('current'); // Ocultar todas las diapositivas
    });

    slides[currentSlide].classList.add('current'); // Mostrar la diapositiva actual
}

// Agregar cambio autom√°tico de diapositiva cada 3 segundos
setInterval(function() {
    changeSlide(1); // Cambiar a la siguiente diapositiva
}, 3000); // 3000 milisegundos (3 segundos)
</script>
