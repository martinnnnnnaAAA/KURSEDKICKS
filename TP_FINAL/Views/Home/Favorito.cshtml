<section style="width:50%;margin-left:25%;margin-right:0; background-color:rgb(255, 255, 255);">
  <h1 style="padding-top:8%; padding-left:2%; margin-top:30px">Favourite Products</h1>


  <div class="container-fluid">
    <div class="row">
      @foreach (MODELO item in ViewBag.ListaFavorito)
      {
        <div class="col-md-3 col-12">
          <div class ="container-card">
          <a href='@Url.Action("Modelo", "Home", item)'>
            <div class="card">
            @if(item.Foto.Length < 30){
              <img src="/Images/@item.Foto" class="card-img-top" alt="...">
              }
              else{
              <img src="@item.Foto" class="card-img-top" alt="...">
              }
              <div class="card-body">
                <h6 class="card-title">@item.MarcaNombre @item.Nombre</h6>
              </div>
              <ul class="list-group list-group-flush">
                <p class="list-group-item" style="height:30px;">USD $@item.Precio</p>
              </ul>
            </div>
          </a>
          </div>
        </div>
      }
    </div>

  </div>
</section>

