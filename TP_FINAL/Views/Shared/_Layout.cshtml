<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] Kursed Kicks</title>
	<link rel="icon" href="\Images\logo.png" type="image/x-icon">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>

<body>
	<div class="navbar">
		<div>
			@* vacio para ocupar el espacio izquierdo *@
		</div>
		<div class="center-logo">
			<a href='@Url.Action("HomeTienda","Home")'><img style="width:8%" src="/Images/logo.png" alt=""></a>
		</div>
		<div class="right-section">
			@if(BD.user == null){
				<a href='@Url.Action("SignIn","Home")' class="logout-link" style=""> Sign Up!</a>
			}
			else{
			@if(BD.user.Administrador == true){
				<a href='@Url.Action("AgregarZapatilla","Home")' class="logout-link" style=""> Add Kick</a>
			}
			<a href='@Url.Action("Favorito","Home")'><img style="width:100%;margin-left: 15%;" class="img-navbar" src="/Images/foto-favorito.png" alt=""></a>
			}
			<div class="profile">
				<a href='@Url.Action("Perfil","Home")'><img style="width:100%;margin-left: 20%;" class="img-navbar"
						src="/Images/perfil.png" alt=""></a>
			</div>
			<div class="cart">
				<a href='@Url.Action("Carrito","Home")'><img class="img-navbar" src="/Images/carrito.png" alt=""></a>
			</div>
		</div>
	</div>

	<div style="padding:0;">
		@RenderBody()
	</div>

	<footer class="footer" style=" width:100%; padding-bottom:10px;">
		<div class="container row" style="max-width:none;padding:20px;margin-left:;padding-right:0;">
			<div class="footer-col" style="width:25%">
				<h4>company</h4>
				<ul style="margin-left: -30px;">
					<li><a href='@Url.Action("AboutUs","Home")'>about us</a></li>
					<li><a href='@Url.Action("OurServices","Home")'>our services</a></li>
					<li><a href='@Url.Action("PrivacyPolicy","Home")'>privacy policy</a></li>
				</ul>
			</div>
			<div class="footer-col" style="width:25%;">
				<h4>get help</h4>
				<ul style="margin-left: -30px;">
					<li><a href='@Url.Action("FAQ","Home")'>FAQ</a></li>
					<li><a href='@Url.Action("Shipping","Home")'>shipping</a></li>
					<li><a href='@Url.Action("Returns","Home")'>returns</a></li>
					<li><a href='@Url.Action("PaymentOptions","Home")'>payment options</a></li>
				</ul>
			</div>
			<div class="footer-col" style="width:25%">
				<h4>online shop</h4>
				<ul style="margin-left: -30px;">
					<li><a href="https://github.com/martinnnnnnaAAA/KURSEDKICKS">GitHub</a></li>
				</ul>
			</div>
			<div class="footer-col" style="width:25%">
				<h4>follow us</h4>
				<div class="social-links" style="width:fit-content">
					<a href="https://www.instagram.com/joacolasca_/"><img src="/Images/FotoIGLasca.jpg" alt=""
							style="border-radius: 50px;"><i class="fa-brands fa-facebook-f"></i></a>
					<a href="https://www.instagram.com/tomas.lerman/"><img src="/Images/FotoIGLerman.jpg" alt=""
							style="border-radius: 50px;"><i class="fa-brands fa-x-twitter"></i></a>
					<a href="https://www.instagram.com/aran.martin/"><img src="/Images/FotoIGAran.jpg" alt=""
							style="border-radius: 50px;"><i class="fa-brands fa-instagram"></i></a>
					<a href="https://www.instagram.com/maty_mazzeo/"><img src="/Images/FotoIGMazzeo.jpg" alt=""
							style="border-radius: 50px;><i class=" fa-brands fa-linkedin-in"></i></a>
					<a href="https://www.instagram.com/uma.got/"><img src="/Images/FotoIGUma.jpg" alt=""
							style="border-radius: 50px;"><i class="fa-brands fa-instagram"></i></a>

				</div>
			</div>
		</div>
		<p style="text-align: center;padding: 10px;background-color: #333;color: #fff;">&copy; 2023 Kursed Kicks. All
			rights reserved.</p>
	</footer>

	<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js"
		integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
		crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
		integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
		crossorigin="anonymous"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>