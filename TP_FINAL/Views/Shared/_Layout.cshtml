<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - TPXX - Apellido</title>
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>

<body>
    <div class="navbar">
      <div class="menu-button" id="menu-button">
        <div id="menu-icon">&#9776;</div>
      </div>
      <div class="center-logo">
        <a href='@Url.Action("HomeTienda","Home")'><img style = "width:5%"src="/Images/logo.png" alt=""></a>
      </div>
      <div class="right-section">
        <div class="favorites">
          <a href="/favorites"><img class = "img-navbar" src="/Images/favoritos.png" alt=""></a>
        </div>
        <div class="search">
          <input type="text" id="search-input" placeholder="Buscar">
        </div>
        <div class="search-icon" id="search-icon">
          &#128269;
        </div>
        <div class="profile">
          <a href="/profile"><img class = "img-navbar" src="/Images/perfil.png" alt=""></a>
        </div>
        <div class="cart">
          <a href="/cart"><img class = "img-navbar" src="/Images/carrito.png" alt=""></a>
        </div>
      </div>
    </div>
 
  <div style="padding:20px 10px 0px 10px;">
    @RenderBody()
  </div>

  <footer>
    &copy; @DateTime.Now.Year - Taller de Programación - TPXX
  </footer>
  <script src="~/js/site.js" asp-append-version="true"></script>
  <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
    integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>

  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
